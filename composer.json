{
    "name": "eekay/laravel-usage-trigger",
    "description": "Trigger Laravel scheduled tasks when users visit your application - Perfect for hosting platforms without cron job support",
    "keywords": [
        "laravel",
        "scheduled",
        "tasks",
        "cron",
        "trigger",
        "user-driven",
        "backup",
        "automation",
        "digital-ocean",
        "heroku"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Edwin Klesman",
            "email": "online@eekay.nl",
            "homepage": "https://www.eekayonline.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^10.0|^11.0",
        "illuminate/console": "^10.0|^11.0",
        "illuminate/http": "^10.0|^11.0",
        "illuminate/cache": "^10.0|^11.0",
        "illuminate/mail": "^10.0|^11.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Eekay\\LaravelUsageTrigger\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Eekay\\LaravelUsageTrigger\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Eekay\\LaravelUsageTrigger\\ScheduledTriggerServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}

